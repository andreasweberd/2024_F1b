void setup(){
  pinMode(9, OUTPUT);
}

void ledblink(int delayTime){  // Funktion mit einem Argument

  for (int i = 0; i < 5; i++){
    analogWrite(9, 1);          // LED schwach leuchten lassen
    delay(delayTime);           // Variable VerzÃ¶gerung
    analogWrite(9, 50);        // LED Mitteh leuchten lassen
    delay(delayTime);           
    analogWrite(9, 100);        
    delay(delayTime);
    analogWrite(9, 150);        
    delay(delayTime);
    analogWrite(9, 200);        
    delay(delayTime);
    analogWrite(9, 255);        
    delay(delayTime);          
  }
}

void loop(){
  ledblink(250);
  analogWrite(9, 0);
  while(true);             
}
